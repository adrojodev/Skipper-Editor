---
export interface Props {
  id: string;
}

const { id } = Astro.props;
---

<div class="card" id={id}>
  <slot />
</div>

<style>
  .card {
    display: flex;
    flex-direction: column;
    gap: 24px;
    box-shadow: 0px 0px 8px rgba(0, 0, 0, 0.16);
    border-radius: 24px;
    background-color: white;
    min-height: 50px;
    padding-left: 24px;
    padding-right: 24px;
    padding-top: 16px;
    padding-bottom: 16px;
  }
</style>
